<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <Button
            android:id="@+id/button"
            android:layout_width="185dp"
            android:layout_height="192dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/baby_monitor"
            android:gravity="bottom|center_horizontal"
            android:onClick="openMonitor"
            android:text="@string/baby_monitor"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="180dp"
            android:layout_height="192dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/calendario"
            android:gravity="bottom|center_horizontal"
            android:onClick="openCalendar"
            android:text="@string/agenda"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="177dp"
            android:layout_height="165dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/music_player"
            android:gravity="top|center_horizontal"
            android:onClick="openMusic"
            android:text="music_loader"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="185dp"
            android:layout_height="165dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/microfono"
            android:gravity="top|center"
            android:onClick="playMusic"
            android:text="music_player"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/ami_sitter"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="104dp"
            android:layout_height="47dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="Toy"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

</LinearLayout>

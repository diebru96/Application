<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <Button
            android:id="@+id/button"
            android:layout_width="195dp"
            android:layout_height="192dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/baby_monitor"
            android:gravity="bottom|center_horizontal"
            android:text="@string/baby_monitor"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="193dp"
            android:layout_height="165dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/calendario"
            android:gravity="top|center_horizontal"
            android:onClick="openCalendar"
            android:text="@string/agenda"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="177dp"
            android:layout_height="165dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/music_player"
            android:gravity="top|center_horizontal"
            android:text="@string/music_player"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="175dp"
            android:layout_height="192dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/microfono"
            android:gravity="bottom|center"
            android:text="@string/microphone"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textColorHint="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="239dp"
            android:gravity="center"
            android:text="@string/ami_sitter"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="45sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/iconView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:orientation="horizontal" />

    </RelativeLayout>

</LinearLayout>
